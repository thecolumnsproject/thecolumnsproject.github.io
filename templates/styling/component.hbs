									{{> multiple-segmented-button}}
								{{/ifIsMultipleSegmentedButton}}
								<label class='style-component-section-row-item-label'>{{label}}</label>
							</div>
						{{/items}}
					</div>
				{{/rows}}
			</div>
		</div>
		{{/styles}} --}}
